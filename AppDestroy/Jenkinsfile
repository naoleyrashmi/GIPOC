pipeline {
    agent any
    	stages {
		stage ('Destroy App') {
			steps{
				sh (script: '''
                          	#!/bin/bash
							cd /var/lib/jenkins/workspace/GI
							export DOCKER_HOST=tcp://root@10.20.14.238:5555
							echo $DOCKER_HOST
                            docker-compose down
							docker volume rm gi_db-data
							docker rmi puppetclient  postgres:12.1
						''')
			 	}
			}  
		}
	}
